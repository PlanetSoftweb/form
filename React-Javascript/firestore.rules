rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isEmailVerified() {
      return request.auth.token.email_verified == true;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isValidUser() {
      return isAuthenticated();
    }

    function isValidTime(time) {
      return time is timestamp && time <= request.time;
    }
    
    // Super Admin function
    function isSuperAdmin() {
      return request.auth != null && 
             request.auth.token.email == 'kevalsavaliya2222@gmail.com';
    }

    // User profiles collection
    match /users/{userId} {
      // Super Admin can read all users, regular users can read their own
      allow read: if isSuperAdmin() || isOwner(userId);
      
      // Allow create during signup without requiring email verification
      allow create: if isAuthenticated() && 
                   request.auth.uid == userId && 
                   request.resource.data.keys().hasAll(['email', 'fullName', 'createdAt', 'updatedAt']) &&
                   isValidTime(request.resource.data.createdAt) &&
                   isValidTime(request.resource.data.updatedAt);
      
      allow update: if isOwner(userId) && 
                   isValidTime(request.resource.data.updatedAt);

      // Allow access to user settings subcollection
      match /settings/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Forms subcollection under users (users/{userId}/forms/{formId})
      match /forms/{formId} {
        // Super Admin can read all forms, owner can read their forms
        allow read: if isSuperAdmin() || isOwner(userId);
        
        allow create: if isOwner(userId) &&
                     request.resource.data.keys().hasAll(['title', 'elements', 'createdAt', 'updatedAt']) &&
                     isValidTime(request.resource.data.createdAt) &&
                     isValidTime(request.resource.data.updatedAt);
                     
        allow update: if isOwner(userId) &&
                     isValidTime(request.resource.data.updatedAt);
        
        allow delete: if isOwner(userId);
        
        // Submissions subcollection under forms (users/{userId}/forms/{formId}/submissions/{submissionId})
        match /submissions/{submissionId} {
          // Super Admin and form owner can read submissions
          allow read: if isSuperAdmin() || isOwner(userId);
          
          // Anyone can create a submission
          allow create: if request.resource.data.keys().hasAll(['responses', 'submittedAt']) &&
                       isValidTime(request.resource.data.submittedAt);
          
          // Only owner can update/delete submissions
          allow update, delete: if isOwner(userId);
        }
      }
    }

    // Top-level forms collection (for public forms at /forms/{formId})
    match /forms/{formId} {
      allow read: if resource.data.published == true || 
                 (isValidUser() && resource.data.userId == request.auth.uid) ||
                 isSuperAdmin();
                 
      allow create: if isValidUser() && 
                   request.resource.data.userId == request.auth.uid &&
                   request.resource.data.keys().hasAll(['title', 'elements', 'userId', 'createdAt', 'updatedAt']) &&
                   isValidTime(request.resource.data.createdAt) &&
                   isValidTime(request.resource.data.updatedAt);
                   
      allow update: if isValidUser() && 
                   resource.data.userId == request.auth.uid &&
                   request.resource.data.userId == request.auth.uid &&
                   isValidTime(request.resource.data.updatedAt) &&
                   request.resource.data.createdAt == resource.data.createdAt;
      
      allow delete: if isValidUser() && resource.data.userId == request.auth.uid;
      
      // Submissions subcollection
      match /submissions/{submissionId} {
        allow read: if isSuperAdmin() || 
                   (isValidUser() && 
                   get(/databases/$(database)/documents/forms/$(formId)).data.userId == request.auth.uid);
        
        allow create: if get(/databases/$(database)/documents/forms/$(formId)).data.published == true &&
                     request.resource.data.keys().hasAll(['responses', 'submittedAt']) &&
                     isValidTime(request.resource.data.submittedAt);
        
        allow update: if isValidUser() && 
                     get(/databases/$(database)/documents/forms/$(formId)).data.userId == request.auth.uid &&
                     request.resource.data.keys().hasAll(['responses', 'submittedAt', 'updatedAt']) &&
                     isValidTime(request.resource.data.updatedAt) &&
                     request.resource.data.submittedAt == resource.data.submittedAt;
        
        allow delete: if isValidUser() && 
                     get(/databases/$(database)/documents/forms/$(formId)).data.userId == request.auth.uid;
      }
    }

    // Admin configuration (API keys, etc.)
    // All authenticated users can READ to use AI features
    // Only Super Admin can WRITE to manage API keys
    match /admin/{configId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }

    // Prevent access to other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
